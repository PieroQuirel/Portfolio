import "../styles/tailwind.css";
import Header from "@components/Header.astro";
import '@fontsource/saira-semi-condensed/500.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Piero Quiroz crea aplicaciones web y mÃ³viles con creatividad"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio de Piero Quiroz</title>
	</head>

	<body class="bg-neutral-950">
  	<div class="relative min-h-screen">
    <div class="absolute inset-0 z-[-2] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(250,120,120,0.3),rgba(255,255,255,0))]"></div>

    <Header />
    <slot />
