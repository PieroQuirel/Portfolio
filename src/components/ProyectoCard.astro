---
interface Props {
image?: string
title: string
date: string
description: string
link1?: string
link2?: string
style: string
}

const { image, date, title, description, link1, link2, style} = Astro.props;

import Etiqueta from './Etiqueta2.astro'
import LinkedInIcon from './icons/LinkedIn.astro';
import GitHubIcon from './icons/GitHub.astro';
---

<div class="max-w-lg bg-white/5 border border-white/20 rounded-lg shadow-sm dark:bg-gray-200 dark:border-gray-300
hover:scale-105 hover:bg-gray-100/10 transition z-10">
    <div class={`h-60 flex overflow-hidden rounded-sm mb-4 ${style} justify-center`}>
        <img class="rounded-t-lg w-2/3 object-cover" src={image} alt="" />
    </div>
    <div class="p-5">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-200 dark:text-white">{title}</h5>
            <h5 class="mb-2 tracking-tight text-gray-200 dark:text-white">{date}</h5>
        <p class="mb-3 font-normal text-gray-400 dark:text-gray-400">{description}</p>

    <div class="flex justify-start items-center gap-4">
        <Etiqueta href={link1}>
				<LinkedInIcon class="size-6" />
				LinkedIn
		</Etiqueta>
        <Etiqueta href={link2}>
				<GitHubIcon class="size-6" />
				GitHub
		</Etiqueta>
    </div>
</div>
