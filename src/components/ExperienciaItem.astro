---
interface Props {
  logo: string
  date: string
  title: string
  company: string
  description: string
  link?: string
}

const { logo, date, title, company, description, link } = Astro.props;

import Etiqueta from './Etiqueta2.astro'
import LinkedInIcon from './icons/LinkedIn.astro';
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>

<div class="rounded-md border border-white/20 justify-center items-center 
text-xl gap-x-2 py-3 px-3 bg-white/5 hover:scale-105 hover:bg-gray-100/10 transition z-10 mt-2">

<div class="flex flex-col-reverse lg:flex-row items-center gap-4">
  <div class="w-40 h-24 flex overflow-hidden rounded-sm mb-4">
  <img class="w-full h-full object-cover" src={logo} alt="Logo de la empresa" />
  </div>

  <div class="flex-col">
  <h1 class="text-3xl font-semibold text-red-600 dark:text-white">{title}</h1>
  <h2 class="text-2xl font-semibold text-red-800 dark:text-white">{company}</h2>
  </div>
</div>
<p class="mb-4 text-base font-normal text-gray-300 dark:text-gray-400">{description}</p>

<div class="flex justify-start items-center gap-4">
    <Etiqueta href="{link}">
				<LinkedInIcon class="size-6" />
				LinkedIn
			</Etiqueta>
</div>
</div>
