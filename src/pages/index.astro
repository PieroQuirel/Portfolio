---
import Layout from '../layouts/Layout.astro';
import '../styles/tailwind.css';
import LinkedInIcon from '@components/icons/LinkedIn.astro';
import GitHubIcon from '@components/icons/GitHub.astro';

import Badge from '../components/Badge.astro';
import Etiqueta from '../components/Etiqueta.astro';
import Experiencia from '@components/Experiencia.astro';
import Container from '../components/Container.astro';
import Proyectos from '@components/Proyectos.astro';
import Habilidades from '@components/Habilidades.astro';
---

<Layout>
	<main>

		<section class="w-full lg:w-[1000px] mx-auto pt-32 pb-16">
		<div class="flex flex-col-reverse lg:flex-row items-center justify-between gap-8">
		<div class="lg:w-2/3">
			<h1 class="text-white text-6xl font-bold flex flex-row gap-x-4 pb-5">Hola! <br> Soy Piero :D</h1>
			<br>
			<br>
			<h2 class="text-2xl text-wrap leading-relaxed">
				<span class="bg-white text-black px-1 py-[1px] font-bold">
					Desarrollador web y movil</span>  con 2 años de experiencia creando diversas aplicaciones.
					Egresado de la carrera de Diseño y Desarrollo de Software de TECSUP.
					<br/> De Lima, <span class="text-red-700">P<span class="text-white">er</span>ú</span>
			</h2>
		</div>

		<div class="lg:w-1/3 flex justify-center">
			<img class="rounded-full size-60 mb-4" src="/src/images/Foto.png" alt="Foto de Piero" />
    	</div>
		</div>

		<nav class="flex gap-x-4 mt-6">
			<Etiqueta href="https://www.linkedin.com/in/piero-quiroz/">
				<LinkedInIcon class="size-6" />
				LinkedIn
			</Etiqueta>
			<Etiqueta href="https://github.com/PieroQuirel">
				<GitHubIcon class="size-6" />
				GitHub
			</Etiqueta>
		</nav>
		</section>

		<Container>
			<h2 class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-5 items-center justify-center">Experiencia Profesional</h2>
			<Experiencia />
		</Container>

		<section class="w-full lg:w-[1500px] mx-auto py-32" id="proyectos">
			<h2 class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-5 items-center justify-center">Proyectos</h2>
			<Proyectos />
		</section>

		<section class="w-full lg:w-[1500px] mx-auto py-32" id="habilidades">
			<h2 class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-5 items-center justify-center">Habilidades</h2>
			<Habilidades />
		</section>

		<footer class="py-8">
			<div class="container mx-auto text-center">
				<p>&copy; {new Date().getFullYear()} Piero Quiroz</p>
			</div>
		</footer>
	</main>
</Layout>
